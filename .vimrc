set softtabstop=4       " 4 space tab
set shiftwidth=4
set modelines=1
set ruler
filetype indent on
filetype plugin on
set autoindent
" }}}
" UI Layout {{{
set number              " show line numbers
set showcmd             " show command in bottom bar
set nocursorline          " highlight current line
set wildmenu
set list lcs=tab:\|\
"set lazyredraw
set showmatch           " higlight matching parenthesis
